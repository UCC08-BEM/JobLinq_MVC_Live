@model IEnumerable<JobLinq_MVC_Live.Models.Company>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="genric-btn primary">Yeni Şirket</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SectorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cadress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SectorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cadress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CityId)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.CompanyId" class="genric-btn primary">Güncelle</a> |
                    <a asp-action="Details" asp-route-id="@item.CompanyId" class="genric-btn primary">Detay</a> |
                    <a asp-action="Delete" asp-route-id="@item.CompanyId" class="genric-btn primary">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
